<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="242dp"
    android:background="@drawable/tankuang_view_bg_style_first"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改头像"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D8DBE0"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/my_mine_photo_linv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="拍照"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D8DBE0"/>

    <TextView
        android:id="@+id/my_mine_photo_linv_album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="相册"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/my_mine_photo_linv_cancel"
        android:layout_width="281dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_fourth"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>